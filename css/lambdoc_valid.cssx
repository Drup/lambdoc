/********************************************************************************/
/* Lambdoc_valid.cssx 								*/
/********************************************************************************/

/********************************************************************************/
/* Inline text.									*/
/********************************************************************************/

.doc_bold {font-weight: bold;}
.doc_emph {font-style: italic;}
.doc_code {font-family: Family_mono; font-weight: bold; color: Colour_code;}
.doc_caps {font-variant: small-caps;}
.doc_ins {text-decoration: underline; color: Colour_ins;}
.doc_del {text-decoration: line-through; color: Colour_del;}
.doc_sup {vertical-align: 0.3em;}
.doc_sub {vertical-align: -0.1em;}


/********************************************************************************/
/* Hyperlinks.									*/
/********************************************************************************/

.doc_lnk
	{
	text-decoration: none;
	color: Colour_lnk;
	}

.doc_see
	{
	margin-left: Hmargin_inline_small;
	vertical-align: 0.3em;
	font-size: Size_note;
	color: Colour_lnk;
	}

.doc_cite
	{
	margin-left: Hmargin_inline_small;
	color: Colour_lnk;
	}


/********************************************************************************/
/* Paragraphs.									*/
/********************************************************************************/

.doc_par
	{
	text-align: justify;
	font-size: Size_normal;
	}

.doc_initial:first-letter
	{
	float: left;
	margin-right: 0.2em;
	font-weight: bold;
	font-size: 3.5em;
	text-shadow: Colour_shadow 2px 2px 1px;
	color: Colour_forefancy;
	}

.doc_par:not(:first-child) {margin-top: Vmargin_par;}
.doc_par:not(:last-child) {margin-bottom: Vmargin_par;}

.doc_par + .doc_par {text-indent: Hmargin_indent;}


/********************************************************************************/
/* List environments (itemize, enumerate, and description).			*/
/********************************************************************************/

.doc_itemize,
.doc_enumerate,
.doc_description {margin: 0 0 0 Hmargin_list;}

.doc_itemize {list-style: disc outside;}
.doc_enumerate {list-style: decimal outside;}

.doc_itemize > li, .doc_enumerate > li {margin: Vmargin_par 0;}
.doc_description > dt {margin: Vmargin_par 0 Vmargin_short;}

.doc_style_none		{list-style-type: none;}
.doc_style_disc		{list-style-type: disc;}
.doc_style_circle	{list-style-type: circle;}
.doc_style_square	{list-style-type: square;}
.doc_style_decimal	{list-style-type: decimal;}
.doc_style_lower_roman	{list-style-type: lower-roman;}
.doc_style_upper_roman	{list-style-type: upper-roman;}
.doc_style_lower_alpha	{list-style-type: lower-alpha;}
.doc_style_upper_alpha	{list-style-type: upper-alpha;}

.doc_description > dt
	{
	margin-left: Hmargin_dt;
	font-size: Size_normal;
	font-weight: bold;
	color: Colour_forefancy;
	}

.doc_itemize:not(:first-child),
.doc_enumerate:not(:first-child),
.doc_description:not(:first-child) {margin-top: Vmargin_textual;}

.doc_itemize:not(:last-child),
.doc_enumerate:not(:last-child),
.doc_description:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* Q&A environments.								*/
/********************************************************************************/

.doc_qanda {margin: 0 Hmargin_inset;}

.doc_qanda > dt
	{
	display: block;
	float: left;
	padding: 0 Hmargin_inline_large 0 0;
	font-size: Size_normal;
	font-weight: bold;
	font-variant: small-caps;
	}

.doc_qanda > .doc_question {color: Colour_question;}
.doc_qanda > .doc_answer {color: Colour_answer;}

.doc_qanda > dd.doc_question {margin: Vmargin_par 0;} 
.doc_qanda > dd.doc_answer {margin: Vmargin_par 0 Vmargin_textual;}

.doc_qanda:not(:first-child) {margin-top: Vmargin_textual;}
.doc_qanda:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* Verse environments.								*/
/********************************************************************************/

.doc_verse
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	}

.doc_verse > div
	{
	display: inline-block;
	font-style: italic;
	}

.doc_verse > div > .doc_par
	{
	text-indent: 0;
	}

.doc_verse:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_verse:not(:last-child) {margin-bottom: Vmargin_boxish;}


/********************************************************************************/
/* Quote environments.								*/
/********************************************************************************/

.doc_quote
	{
	clear: both;
	margin: 0 Hmargin_inset;
	padding-left: Hmargin_quote;
	border-left: Border_quote;
	color: Colour_ghostly;
	}

.doc_quote:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_quote:not(:last-child) {margin-bottom: Vmargin_boxish;}


/********************************************************************************/
/* Mathematics environments.							*/
/********************************************************************************/

.doc_mathblk
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	}

.doc_mathblk:not(:first-child) {margin-top: Vmargin_textual;}
.doc_mathblk:not(:last-child) {margin-bottom: Vmargin_textual;}
.doc_wrapper > .doc_mathblk {margin: 0;}


/********************************************************************************/
/* Source environments.								*/
/********************************************************************************/

.doc_src_main
	{
	clear: both;
	margin: 0 Hmargin_inset;
	font-size: Size_pre;
	font-family: Family_mono;
	line-height: Line_height_src;
	overflow: auto;
	color: Color_body;
	}

.doc_src_box
	{
	border: Border_box;
	-moz-box-shadow: Box_shadow;
	-moz-border-radius: Box_radius;
	background: Background_src;
	}

.doc_src_nums
	{
	float: left;
	margin-right: Hmargin_src;
	border-right: Border_src;
	font-weight: bold;
	}

.doc_src_line
	{
	display: block;
	white-space: pre;
	height: 1em;
	vertical-align: bottom;
	padding: 0.3em 1em;	/* 0.25 = Padding_box / 4 */
	}

.doc_src_dummy
	{
	display: block;
	height: 0;
	padding: 0.375em 0;	/* 0.375 = (Padding_box - (Padding_box / 4)) / 2 */
	}

.doc_src_zebra > .doc_src_code > .doc_src_line:nth-child(odd) {background: Background_src_odd;}
.doc_src_zebra > .doc_src_code > .doc_src_line:nth-child(even) {background: Background_src_even;}
.doc_src_zebra > .doc_src_code > .doc_src_line:first-child {-moz-border-radius-topright: Box_radius;}
.doc_src_zebra > .doc_src_code > .doc_src_line:first-child {-moz-border-radius-topleft: Box_radius;}
.doc_src_zebra > .doc_src_code > .doc_src_line:last-child {-moz-border-radius-bottomright: Box_radius;}
.doc_src_zebra > .doc_src_code > .doc_src_line:last-child {-moz-border-radius-bottomleft: Box_radius;}

.doc_src_num	{color: #606; font-weight: bold;}
.doc_src_esc	{color: #f06; font-weight: bold;}
.doc_src_str	{color: #c33;}
.doc_src_dstr	{color: #0ff;}
.doc_src_slc	{color: #669; font-style: italic;}
.doc_src_com	{color: #669; font-style: italic;}
.doc_src_dir	{color: #600;}
.doc_src_sym	{color: #060;}
.doc_src_kwa	{color: #960; font-weight: bold;}
.doc_src_kwb	{color: #006;}
.doc_src_kwc	{color: #03c;}
.doc_src_kwd	{color: #090; font-weight: bold;}

.doc_src_main:not(:first-child) {margin-top: Vmargin_textual;}
.doc_src_main:not(:last-child) {margin-bottom: Vmargin_textual;}
.doc_src_box:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_src_box:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_src_main {margin: 0;}


/********************************************************************************/
/* Tabular environments.		 					*/
/********************************************************************************/

.doc_tab
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_tab > div
	{
	display: inline-block;
	line-height: Line_height_body;
	}

.doc_tab > div > table
	{
	font-size: Size_small;
	border-collapse: collapse;
	border-top: Border_tabular_outter;
	border-bottom: Border_tabular_outter;
	}

.doc_tab > div > table > thead
	{
	vertical-align: bottom;
	font-weight: bold;
	border-bottom: Border_tabular_inner;
	}

.doc_tab > div > table > tfoot
	{
	vertical-align: bottom;
	font-weight: bold;
	border-top: Border_tabular_inner;
	}

.doc_row > th {padding: Padding_vtabout Padding_htab; font-weight: bold;}
.doc_row > td {padding: Padding_vtabout Padding_htab; font-weight: bold;}
tbody > .doc_row > th {padding: Padding_vtabin Padding_htab;}
tbody > .doc_row > td {padding: Padding_vtabin Padding_htab; font-weight: normal;}

tbody:first-of-type > .doc_row:first-child > th {padding-top: Padding_vtabout;}
tbody:first-of-type > .doc_row:first-child > td {padding-top: Padding_vtabout;}
tbody > .doc_row:last-child > th {padding-bottom: Padding_vtabout;}
tbody > .doc_row:last-child > td {padding-bottom: Padding_vtabout;}

.doc_cell_l {text-align: left;}
.doc_cell_r {text-align: right;}
.doc_cell_c {text-align: center;}
.doc_cell_j {text-align: justify;}

.doc_hline {border-bottom: Border_hline;}

.doc_tab:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_tab:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_tab {margin: 0;}


/********************************************************************************/
/* Verbatim environments.							*/
/********************************************************************************/

.doc_verb
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_verb > div {display: inline-block;}

.doc_verb > div > pre
	{
        display: block;
	overflow: hidden;
	white-space: pre;
	line-height: Line_height_verb;
	text-align: left;
	font-family: Family_mono;
	}

.doc_mult0 {font-size: 1.2em;}
.doc_mult1 {font-size: 1.7em;}
.doc_mult2 {font-size: 2.4em;}
.doc_mult3 {font-size: 3.4em;}
.doc_mult4 {font-size: 4.8em;}
.doc_mult5 {font-size: 6.8em;}
.doc_mult6 {font-size: 9.6em;}
.doc_mult7 {font-size: 13.6em;}
.doc_mult8 {font-size: 19.2em;}
.doc_mult9 {font-size: 27.2em;}

.doc_verb:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_verb:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_verb {margin: 0;}


/********************************************************************************/
/* Image environments.			 					*/
/********************************************************************************/

.doc_image
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_image > a			{display: inline-block;}
.doc_image > a > img		{display: block; border: none; width: 100%;}
.doc_image_frame > a > img	{-moz-box-shadow: Box_shadow;}

.doc_image:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_image:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_image {margin: 0;}


/********************************************************************************/
/* Subpage environments.		 					*/
/********************************************************************************/

.doc_subpage
	{
	clear: both;
	margin: 0 Hmargin_inset;
	padding: Padding_box;
	border: Border_box;
	-moz-box-shadow: Box_shadow;
	-moz-border-radius: Box_radius;
	background: Background_subpage;
	}

.doc_subpage:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_subpage:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_subpage {margin: 0;}


/********************************************************************************/
/* Pull-quote environments.							*/
/********************************************************************************/

.doc_pull
	{
	margin: 0 Hmargin_inset;
	padding-left: 2.75em;
	text-align: center;
	}

.doc_pull > div
	{
	display: inline-block;
	font-size: Size_pull;
	font-style: italic;
	font-weight: bold;
	quotes: "\201c" "\201d";
	color: Colour_pulltext;
	}


.doc_pull > div > .doc_pullhead
	{
	text-align: right;
	font-size: small;
	font-style: normal;
	font-weight: normal;
	color: Colour_pullhead;
	}

.doc_pull > div:before
	{
	float: left;
	display: block;
	font-family: "Georgia", serif;
	font-size: 5em;
	content: open-quote;
	margin-left: -0.7em;
	height: 0;
	line-height: 0.75em;
	color: Colour_backfancy;
	}


/********************************************************************************/
/* Boxout environments.								*/
/********************************************************************************/

.doc_boxout
	{
	margin: 0 Hmargin_inset;
	border: Border_box;
	-moz-box-shadow: Box_shadow;
	-moz-border-radius: Box_radius;
	background: Background_boxout;
	}

.doc_boxout_head
	{
	padding: Padding_box_title;
	border-bottom: Border_box;
	-moz-border-radius-topleft: Box_radius;
	-moz-border-radius-topright: Box_radius;
	text-align: center;
	font-family: Family_heading;
	font-size: Size_large;
	font-variant: small-caps;
	font-weight: bold;
	color: Colour_forefancy;
	}
	
.doc_boxout_body
	{
	padding: Padding_box;
	}


/********************************************************************************/
/* Sample configuration of some common boxouts.					*/
/********************************************************************************/

.doc_boxout_env_warning {background: #fffcf0;}
.doc_boxout_env_warning > .doc_boxout_head
	{
	padding-left: 28px;
	color: #ff9;
	background: #b30 url('boxout-warning.png') no-repeat 6px center;
	}

.doc_boxout_env_tip {background: #f7fcff;}
.doc_boxout_env_tip > .doc_boxout_head
	{
	padding-left: 28px;
	color: #fff;
	background: #06c url('boxout-tip.png') no-repeat 6px center;
	}


/********************************************************************************/
/* Theorem environments.							*/
/********************************************************************************/

.doc_theorem {margin: 0 Hmargin_inset;}

.doc_theorem_head
	{
	float: left;
	margin-right: Hmargin_inline_large;
	}

.doc_thmname {font-weight: bold; color: Colour_forefancy;}
.doc_thmextra {margin-left: Hmargin_inline_large;}

.doc_theorem:not(:first-child) {margin-top: Vmargin_textual;}
.doc_theorem:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* CSS common to floater blocks.						*/
/********************************************************************************/

.doc_float_center {clear: both; margin: 0 Hmargin_inset;}
.doc_float_right {clear: right; margin: 0.5em 0 1.5em 2.5em; float: right; max-width: 45%;}
.doc_float_left {clear: left; margin: 0.5em 2.5em 1.5em 0; float: left; max-width: 45%;}

.doc_float_center:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_float_center:not(:last-child) {margin-bottom: Vmargin_boxish;}

.doc_wrapper.doc_float_center:not(:first-child) {margin-top: Vmargin_wrapper;}
.doc_wrapper.doc_float_center:not(:last-child) {margin-bottom: Vmargin_wrapper;}


/********************************************************************************/
/* CSS for wrapper captions.							*/
/********************************************************************************/

.doc_caption_long
	{
	margin: Vmargin_caption_long 0 0;
	text-align: center;
	}

.doc_caption_short
	{
	margin: Vmargin_caption_short 0 0;
	text-align: right;
	}

.doc_caption > div
	{
	display: inline-block;
	font-size: Size_small;
	text-align: justify;
	}

.doc_caption > div > h1
	{
	display: inline;
	font-weight: bold;
	color: Colour_forefancy;
	}

.doc_caption_long > div > h1 {margin-right: Hmargin_inline_small}

.doc_caption_long > div > p {display: inline;}


/********************************************************************************/
/* Document titles and headings.						*/
/********************************************************************************/

.doc_title
	{
	clear: both;
	font-family: Family_heading;
	font-weight: bold;
	font-variant: small-caps;
	text-transform: capitalize;
	text-align: center;
	color: Colour_forefancy;
	}

h1.doc_title {font-size: Size_title1;}
h2.doc_title {font-size: Size_title2;}

.doc_part
	{
	clear: both;
	padding: Padding_part 0;
	border-top: Border_part;
	border-bottom: Border_part;
	font-family: Family_heading;
	font-weight: bold;
	font-size: Size_part;
	font-variant: small-caps;
	text-transform: capitalize;
	text-align: center;
	word-spacing: Heading_word_spacing;
	letter-spacing: Heading_letter_spacing;
	color: Colour_forefancy;
	}

.doc_sec
	{
	clear: both;
	font-family: Family_heading;
	font-weight: bold;
	word-spacing: Heading_word_spacing;
	letter-spacing: Heading_letter_spacing;
	color: Colour_forefancy;
	}

h1.doc_sec {font-size: Size_h1;}
h2.doc_sec {font-size: Size_h2;}
h3.doc_sec {font-size: Size_h3;}

.doc_title:not(:first-child) {margin-top: Vmargin_title_top;}
.doc_part:not(:first-child) {margin-top: Vmargin_part_top;}
.doc_sec:not(:first-child) {margin-top: Vmargin_sec_top;}

.doc_title:not(:last-child) {margin-bottom: Vmargin_title_bottom;}
.doc_part:not(:last-child) {margin-bottom: Vmargin_part_bottom;}
.doc_sec:not(:last-child) {margin-bottom: Vmargin_sec_bottom;}

h2.doc_title + h2.doc_title {margin-top: Vmargin_title_intra;}


/********************************************************************************/
/* Abstract.									*/
/********************************************************************************/

.doc_abs {margin: Vmargin_floater Hmargin_inset;}

.doc_abs > .doc_sec {text-align: center;}


/********************************************************************************/
/* Rules.									*/
/********************************************************************************/

.doc_rule
	{
	border: Border_rule;
	margin: 0 Hmargin_inset;
	}

.doc_rule:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_rule:not(:last-child) {margin-bottom: Vmargin_boxish;}


/********************************************************************************/
/* CSS for table of contents.							*/
/********************************************************************************/

.doc_toc
	{
	list-style-type: none;
	margin-top: 0.75em;
	padding-left: 0;
	font-size: Size_normal;
	}

.doc_toc > li {margin-left: 0.5em;}

.doc_toc > li.level0
	{
	text-decoration: underline;
	margin: 0.25em 0;
	}

.doc_toc > li > a > span + span {margin-left: 0.5em;}


/********************************************************************************/
/* CSS for story bibliography.		 					*/
/********************************************************************************/

.doc_bibs
	{
	margin-top: 1em;
	padding: 0;
	list-style-type: none;
	}

.doc_bibs > li {margin-top: 0.75em;}

.doc_bibs > li > span
	{
	width: 2.5em;
	float: left;
	font-weight: bold;
	text-align: right;
	}

.doc_bibs > li > p {margin-left: 3em;}

.doc_bib_author {margin-right: 0.5em;}

.doc_bib_author:after {content: ':';}

.doc_bib_title {font-style: italic;} 

.doc_bib_resource
	{
	display: block;
	margin-top: 0.25em;
	}


/********************************************************************************/
/* CSS for story notes.			 					*/
/********************************************************************************/

.doc_notes
	{
	margin-top: 1em;
	padding: 0;
	list-style-type: none;
	}

.doc_notes > li {margin-top: 0.75em;}

.doc_notes > li > span
	{
	width: 2.5em;
	float: left;
	font-weight: bold;
	text-align: right;
	}

.doc_notes > li > div {margin-left: 3em;}

