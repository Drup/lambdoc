/********************************************************************************/
/* Lambdoc_valid.ccss 								*/
/********************************************************************************/

/********************************************************************************/
/* Inline text.									*/
/********************************************************************************/

.doc_bold {font-weight: bold;}
.doc_emph {font-style: italic;}
.doc_code {font-family: Family_mono; font-weight: bold; color: Colour_faded;}
.doc_caps {font-variant: small-caps;}
.doc_ins  {text-decoration: underline; color: #090;}
.doc_del  {text-decoration: line-through; color: #900;}
.doc_sup  {vertical-align: 0.3em;}
.doc_sub  {vertical-align: -0.1em;}
.doc_mbox {white-space: nowrap;}


/********************************************************************************/
/* Hyperlinks.									*/
/********************************************************************************/

Colour_lnk: #009;

.doc_lnk
	{
	text-decoration: none;
	color: Colour_lnk;
	}

.doc_see
	{
	margin-left: Hmargin_inline_small;
	vertical-align: 0.3em;
	font-size: Fsize_note;
	color: Colour_lnk;
	}

.doc_cite
	{
	margin-left: Hmargin_inline_small;
	color: Colour_lnk;
	}


/********************************************************************************/
/* Paragraphs.									*/
/********************************************************************************/

Hmargin_indent: 1em;

.doc_par
	{
	text-align: justify;
	}

.doc_initial:first-letter
	{
	float: left;
	margin-right: 0.15em;
	font-weight: bold;
	font-size: 3.5em;
	text-transform: capitalize;
	color: Colour_fancy;
	}

.doc_par:not(:first-child) {margin-top: Vmargin_par;}
.doc_par:not(:last-child) {margin-bottom: Vmargin_par;}

.doc_par + .doc_par:not(.doc_initial)	{text-indent: Hmargin_indent;}
.doc_par.doc_indent:not(.doc_initial)	{text-indent: Hmargin_indent;}
.doc_par.doc_noindent			{text-indent: 0 !important;}


/********************************************************************************/
/* List environments (itemize, enumerate, and description).			*/
/********************************************************************************/

Hmargin_list:	2em;
Hmargin_dt:	-1 * (Hmargin_list - 0.5em);

.doc_itemize,
.doc_enumerate,
.doc_description {margin: 0 0 0 Hmargin_list;}

.doc_itemize {list-style: disc outside;}
.doc_enumerate {list-style: decimal outside;}

.doc_itemize > .doc_item, .doc_enumerate > .doc_item {margin: Vmargin_par 0;}
.doc_description > .doc_item {margin: Vmargin_par 0 Vmargin_short;}

.doc_style_none		{list-style-type: none;}
.doc_style_disc		{list-style-type: disc;}
.doc_style_circle	{list-style-type: circle;}
.doc_style_square	{list-style-type: square;}
.doc_style_decimal	{list-style-type: decimal;}
.doc_style_lower_roman	{list-style-type: lower-roman;}
.doc_style_upper_roman	{list-style-type: upper-roman;}
.doc_style_lower_alpha	{list-style-type: lower-alpha;}
.doc_style_upper_alpha	{list-style-type: upper-alpha;}

.doc_description > .doc_item
	{
	margin-left: Hmargin_dt;
	font-weight: bold;
	color: Colour_fancy;
	}

.doc_itemize:not(:first-child),
.doc_enumerate:not(:first-child),
.doc_description:not(:first-child) {margin-top: Vmargin_textual;}

.doc_itemize:not(:last-child),
.doc_enumerate:not(:last-child),
.doc_description:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* Q&A environments.								*/
/********************************************************************************/

Hmargin_answer: 1.5em;

dt.doc_question,
dt.doc_answer
	{
	display: block;
	float: left;
	margin-right: Hmargin_inline_large;
	font-weight: bold;
	font-variant: small-caps;
	}

dt.doc_answer {margin-left: Hmargin_answer;}

dt.doc_answer:before
	{
	display: block;
	float: left;
	margin-left: -0.75em;
	height: 0;
	line-height: 1em;
	font-family: "Georgia", serif;
	font-weight: bold;
	font-variant: normal;
	font-size: 1.8em;
	quotes: "\201c" "\201d";
	content: open-quote;
	color: Colour_fancy;
	}

dd.doc_question {margin: Vmargin_par 0;} 
dd.doc_answer {margin: Vmargin_par 0 Vmargin_textual Hmargin_answer;}

.doc_question {color: Colour_fancy;}

.doc_qanda:not(:first-child) {margin-top: Vmargin_textual;}
.doc_qanda:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* Verse environments.								*/
/********************************************************************************/

.doc_verse
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	}

.doc_verse_aux
	{
	display: inline-block;
	font-style: italic;
	}

.doc_verse_aux > .doc_par
	{
	text-indent: 0 !important;
	}

.doc_verse:not(:first-child) {margin-top: Vmargin_hybrid;}
.doc_verse:not(:last-child) {margin-bottom: Vmargin_hybrid;}


/********************************************************************************/
/* Quote environments.								*/
/********************************************************************************/

.doc_quote
	{
	clear: both;
	margin: 0 Hmargin_inset;
	padding-left: 0.75em;
	border-left: 2px dotted Colour_fancy;
	color: #444;
	}

.doc_quote:not(:first-child) {margin-top: Vmargin_hybrid;}
.doc_quote:not(:last-child) {margin-bottom: Vmargin_hybrid;}


/********************************************************************************/
/* Mathematics environments.							*/
/********************************************************************************/

.doc_mathblk
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	}

.doc_mathblk:not(:first-child) {margin-top: Vmargin_textual;}
.doc_mathblk:not(:last-child) {margin-bottom: Vmargin_textual;}
.doc_wrapper > .doc_mathblk {margin: 0;}


/********************************************************************************/
/* Source environments.								*/
/********************************************************************************/

Line_height_src:	1.8em;
Border_src_console:     1px solid #ffb720;
Border_src_consnums:    1px solid #ffb720;

.doc_src_main
	{
	clear: both;
	margin: 0 Hmargin_inset;
	font-size: Fsize_pre;
	font-family: Family_mono;
	line-height: Line_height_src;
	overflow: auto;
	}

.doc_src_boxed,
.doc_src_zebra
	{
	border: Border_box;
	-moz-box-shadow: Shadow_box;
	-moz-border-radius: Radius_box;
	background: #f8f9fc;
	}

.doc_src_console
	{
	border: Border_src_console;
	-moz-box-shadow: Shadow_box;
	-moz-border-radius: Radius_box;
	background: #000;
	color: #ffe790;
	}

.doc_src_nums
	{
	float: left;
	margin-right: 1em;
	border-right: 1px solid #666;
	white-space: normal;
	font-weight: bold;
	}

.doc_src_console > .doc_src_nums
	{
	border-right: Border_src_consnums;
	}

.doc_src_code
	{
	white-space: normal;
	}

.doc_src_line
	{
	display: block;
	white-space: pre;
	height: Line_height_src;
	padding: 0 1em;
	}

.doc_src_dummy
	{
	display: block;
	height: 0;
	padding: 0.3em 0;
	}

.doc_src_zebra > .doc_src_code > .doc_src_line:nth-child(odd) {background: #f3f6fc;}
.doc_src_zebra > .doc_src_code > .doc_src_line:nth-child(even) {background: #f9f9f9;}
.doc_src_zebra > .doc_src_code > .doc_src_line:first-child {-moz-border-radius-topright: Radius_box;}
.doc_src_zebra > .doc_src_code > .doc_src_line:first-child {-moz-border-radius-topleft: Radius_box;}
.doc_src_zebra > .doc_src_code > .doc_src_line:last-child {-moz-border-radius-bottomright: Radius_box;}
.doc_src_zebra > .doc_src_code > .doc_src_line:last-child {-moz-border-radius-bottomleft: Radius_box;}

.doc_src_Kwd	{color: #0000ff; font-weight: bold;}
.doc_src_Type	{color: #007f00;}
.doc_src_Utyp	{color: #007f7f;}
.doc_src_Str	{color: #ff0000;}
.doc_src_Rex	{color: #ff9f00;}
.doc_src_Sch	{color: #ffbfcf;}
.doc_src_Com	{color: #9f2f2f; font-style: italic;}
.doc_src_Num	{color: #7f007f;}
.doc_src_Prep	{color: #00007f; font-weight: bold;}
.doc_src_Sym	{color: #7f0000;}
.doc_src_Fun	{color: #000000; font-weight: bold;}
.doc_src_Cbrk	{color: #ff0000;}
.doc_src_Pvar	{color: #00007f;}
.doc_src_Pfun	{color: #00007f; font-weight: bold;}
.doc_src_Clas	{color: #007f7f;}
.doc_src_Line	{color: #000000;}
.doc_src_Url	{color: #0000ff; text-decoration: underline;}
.doc_src_Date	{color: #0000ff; font-weight: bold;}
.doc_src_Time	{color: #00007f; font-weight: bold;}
.doc_src_File	{color: #00007f; font-weight: bold;}
.doc_src_Ip	{color: #007f00;}
.doc_src_Name	{color: #007f00;}
.doc_src_Var	{color: #007f00;}
.doc_src_Ital	{color: #007f00; font-style: italic;}
.doc_src_Bold	{color: #007f00; font-weight: bold;}
.doc_src_Undr	{color: #007f00; text-decoration: underline;}
.doc_src_Fixd	{color: #00ff00;}
.doc_src_Arg	{color: #007f00;}
.doc_src_Oarg	{color: #7f007f;}
.doc_src_Math	{color: #ff9f00;}
.doc_src_Bibx	{color: #0000ff;}
.doc_src_Old	{color: #ff9f00;}
.doc_src_New	{color: #007f00;}
.doc_src_Diff	{color: #0000ff;}
.doc_src_Sel	{color: #7f007f;}
.doc_src_Prop	{color: #0000ff;}
.doc_src_Val	{color: #007f00;}
.doc_src_Atom	{color: #ff9f00;}
.doc_src_Meta	{color: #000000; font-style: italic;}

.doc_src_plain:not(:first-child) {margin-top: Vmargin_hybrid;}
.doc_src_plain:not(:last-child) {margin-bottom: Vmargin_hybrid;}
.doc_src_boxed:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_src_boxed:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_src_zebra:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_src_zebra:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_src_console:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_src_console:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_src_main {margin: 0;}


/********************************************************************************/
/* Tabular environments.		 					*/
/********************************************************************************/

Border_tabular_outter:  2px solid #666;
Border_tabular_inner:   1px solid #666;
Border_tabular_body:    1px dotted #999;
Border_hline:		1px solid #000;

Padding_htab:		1em;
Padding_vtabin:		0.1em;
Padding_vtabout:	0.4em;

.doc_tab
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_tab_aux
	{
	display: inline-block;
	line-height: Line_height_doc;
	}

.doc_tab_aux > table
	{
	font-size: Fsize_small;
	border-collapse: collapse;
	border-top: Border_tabular_outter;
	border-bottom: Border_tabular_outter;
	}

.doc_tab_aux > table > thead
	{
	vertical-align: bottom;
	font-weight: bold;
	border-bottom: Border_tabular_inner;
	}

.doc_tab_aux > table > tfoot
	{
	vertical-align: bottom;
	font-weight: bold;
	border-top: Border_tabular_inner;
	}

.doc_tgroup > tr > th {padding: Padding_vtabout Padding_htab; font-weight: bold;}
.doc_tgroup > tr > td {padding: Padding_vtabout Padding_htab; font-weight: bold;}
tbody.doc_tgroup > tr > th {padding: Padding_vtabin Padding_htab;}
tbody.doc_tgroup > tr > td {padding: Padding_vtabin Padding_htab; font-weight: normal;}

tbody.doc_tgroup > tr:first-child > th {padding-top: Padding_vtabout;}
tbody.doc_tgroup > tr:first-child > td {padding-top: Padding_vtabout;}
tbody.doc_tgroup > tr:last-child > th {padding-bottom: Padding_vtabout;}
tbody.doc_tgroup > tr:last-child > td {padding-bottom: Padding_vtabout;}
tbody.doc_tgroup + tbody.doc_tgroup {border-top: Border_tabular_body;}

.doc_cell_l {text-align: left;}
.doc_cell_r {text-align: right;}
.doc_cell_c {text-align: center;}
.doc_cell_j {text-align: justify;}

.doc_oline {border-top: Border_hline;}
.doc_uline {border-bottom: Border_hline;}

.doc_tab:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_tab:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_tab {margin: 0;}


/********************************************************************************/
/* Verbatim environments.							*/
/********************************************************************************/

.doc_verb
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_verb_aux {display: inline-block;}

.doc_verb_aux > pre
	{
        display: block;
	overflow: hidden;
	white-space: pre;
	line-height: 1em;
	text-align: left;
	font-family: Family_mono;
	}

.doc_mult0 {font-size: 1.20em;}
.doc_mult1 {font-size: 1.70em;}
.doc_mult2 {font-size: 2.40em;}
.doc_mult3 {font-size: 3.39em;}
.doc_mult4 {font-size: 4.80em;}
.doc_mult5 {font-size: 6.79em;}
.doc_mult6 {font-size: 9.60em;}
.doc_mult7 {font-size: 13.6em;}
.doc_mult8 {font-size: 19.2em;}
.doc_mult9 {font-size: 27.2em;}

.doc_verb:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_verb:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_verb {margin: 0;}


/********************************************************************************/
/* Picture environments.							*/
/********************************************************************************/

.doc_pic
	{
	clear: both;
	margin: 0 Hmargin_inset;
	text-align: center;
	line-height: 0;
	}

.doc_pic_lnk				{display: inline-block; width: 100%;}
.doc_pic_lnk > img			{display: inline; max-width: 100%; border: none;}
.doc_pic_frame > .doc_pic_lnk > img	{-moz-box-shadow: Shadow_box;}

.doc_pic:not(:first-child)	{margin-top: Vmargin_boxish;}
.doc_pic:not(:last-child)	{margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_pic		{margin: 0;}


/********************************************************************************/
/* Subpage environments.		 					*/
/********************************************************************************/

.doc_subpage
	{
	clear: both;
	margin: 0 Hmargin_inset;
	padding: Padding_box;
	border: Border_box;
	-moz-box-shadow: Shadow_box;
	-moz-border-radius: Radius_box;
	background: #f9f9f9;
	}

.doc_subpage:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_subpage:not(:last-child) {margin-bottom: Vmargin_boxish;}
.doc_wrapper > .doc_subpage {margin: 0;}


/********************************************************************************/
/* Pull-quote environments.							*/
/********************************************************************************/

Border_pull: 2px dotted Colour_fancy;

.doc_pull
	{
	margin: 0 Hmargin_inset;
	text-align: center;
	}

.doc_pull_aux
	{
	display: inline-block;
	padding: 1em 0.5em 1em 2.5em;
	border-top: Border_pull;
	border-bottom: Border_pull;
	font-size: Fsize_pull;
	font-weight: bold;
	color: #555;
	}

.doc_pull_aux:before
	{
	float: left;
	display: block;
	font-family: "Georgia", serif;
	font-size: 3em;
	quotes: "\201c" "\201d";
	content: open-quote;
	margin-left: -0.7em;
	height: 0;
	line-height: 0.75em;
	color: Colour_fancy;
	}

.doc_pull_head
	{
	text-align: right;
	font-size: Fsize_pull_head;
	font-style: normal;
	font-weight: normal;
	color: Colour_fancy;
	}


/********************************************************************************/
/* Boxout environments.								*/
/********************************************************************************/

.doc_boxout
	{
	margin: 0 Hmargin_inset;
	border: Border_box;
	-moz-box-shadow: Shadow_box;
	-moz-border-radius: Radius_box;
	background: #fffcf0;
	}

.doc_boxout_head
	{
	padding: 0.3em;
	-moz-border-radius-topleft: Radius_box;
	-moz-border-radius-topright: Radius_box;
	text-align: center;
	font-family: Family_heading;
	font-size: Fsize_large;
	font-variant: small-caps;
	font-weight: bold;
	color: Colour_fancy;
	}
	
.doc_boxout_body
	{
	padding: Padding_box;
	}


/********************************************************************************/
/* Theorem environments.							*/
/********************************************************************************/

.doc_theorem
	{
	margin: 0 Hmargin_inset;
	}

.doc_theorem_head
	{
	float: left;
	height: Line_height_doc;
	margin-right: Hmargin_inline_large;
	}

.doc_thmname {font-weight: bold; color: Colour_fancy;}
.doc_thmextra {margin-left: Hmargin_inline_large;}

.doc_theorem:not(:first-child) {margin-top: Vmargin_textual;}
.doc_theorem:not(:last-child) {margin-bottom: Vmargin_textual;}


/********************************************************************************/
/* CSS common to floater blocks.						*/
/********************************************************************************/

.doc_float_center {clear: both; margin: 0 Hmargin_inset;}
.doc_float_right {clear: right; margin: 0.5em 0 1.5em 2.5em; float: right; max-width: 45%;}
.doc_float_left {clear: left; margin: 0.5em 2.5em 1.5em 0; float: left; max-width: 45%;}

.doc_float_center:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_float_center:not(:last-child) {margin-bottom: Vmargin_boxish;}

.doc_wrapper.doc_float_center:not(:first-child) {margin-top: Vmargin_wrapper;}
.doc_wrapper.doc_float_center:not(:last-child) {margin-bottom: Vmargin_wrapper;}


/********************************************************************************/
/* CSS for wrapper captions.							*/
/********************************************************************************/

.doc_caption_long
	{
	margin: 1em 0 0;
	text-align: center;
	}

.doc_caption_short
	{
	margin: 0.5em 0 0;
	text-align: right;
	}

.doc_caption_aux
	{
	display: inline-block;
	font-size: Fsize_caption;
	text-align: justify;
	}

.doc_caption_head
	{
	display: inline;
	font-weight: bold;
	color: Colour_fancy;
	}

.doc_caption_long > .doc_caption_aux > .doc_caption_head {margin-right: Hmargin_inline_small;}

.doc_caption_body {display: inline;}


/********************************************************************************/
/* Document titles and headings.						*/
/********************************************************************************/

Heading_word_spacing:   0.1em;
Heading_letter_spacing:	0;
Border_part:		1px solid Colour_fancy;

.doc_order {margin-right: Hmargin_inline_large;}
.doc_part > .doc_order {text-decoration: underline;}

.doc_title
	{
	clear: both;
	font-family: Family_heading;
	font-weight: bold;
	font-variant: small-caps;
	text-transform: capitalize;
	text-align: center;
	color: Colour_fancy;
	}

h1.doc_title {font-size: Fsize_title1;}
h2.doc_title {font-size: Fsize_title2;}

.doc_part
	{
	clear: both;
	padding: 0.25em 0;
	border-top: Border_part;
	border-bottom: Border_part;
	font-family: Family_heading;
	font-weight: bold;
	font-size: Fsize_part;
	text-transform: capitalize;
	text-align: center;
	word-spacing: Heading_word_spacing;
	letter-spacing: Heading_letter_spacing;
	color: Colour_fancy;
	}

.doc_sec
	{
	clear: both;
	font-family: Family_heading;
	font-weight: bold;
	word-spacing: Heading_word_spacing;
	letter-spacing: Heading_letter_spacing;
	color: Colour_fancy;
	}

h1.doc_sec {font-size: Fsize_h1;}
h2.doc_sec {font-size: Fsize_h2;}
h3.doc_sec {font-size: Fsize_h3;}

.doc_title:not(:first-child) {margin-top: 2em;}
.doc_part:not(:first-child) {margin-top: 2em;}
.doc_sec:not(:first-child) {margin-top: 1.5em;}

.doc_title:not(:last-child) {margin-bottom: 1.5em;}
.doc_part:not(:last-child) {margin-bottom: 1.5em;}
.doc_sec:not(:last-child) {margin-bottom: 0.5em;}

h2.doc_title + h2.doc_title {margin-top: -1em;}


/********************************************************************************/
/* Abstract.									*/
/********************************************************************************/

.doc_abstract {margin: Vmargin_boxish Hmargin_inset;}

.doc_abstract > .doc_sec {text-align: center;}


/********************************************************************************/
/* Rules.									*/
/********************************************************************************/

.doc_rule
	{
	border: 1px dotted Colour_fancy;
	margin: 0 Hmargin_inset;
	}

.doc_rule:not(:first-child) {margin-top: Vmargin_boxish;}
.doc_rule:not(:last-child) {margin-bottom: Vmargin_boxish;}


/********************************************************************************/
/* CSS for table of contents.							*/
/********************************************************************************/

.doc_toc
	{
	list-style-type: none;
	margin-top: Vmargin_textual;
	padding-left: 0;
	}

.doc_toc > .doc_item {margin-left: 0.5em;}

.doc_level0
	{
	text-decoration: underline;
	margin: 0.25em 0;
	}


/********************************************************************************/
/* CSS for story bibliography.		 					*/
/********************************************************************************/

.doc_bibs
	{
	margin-top: Vmargin_textual;
	padding: 0;
	list-style-type: none;
	}

.doc_bib {margin-top: Vmargin_ghost_entry;}

.doc_bib_head
	{
	width: Width_ghost_num;
	float: left;
	font-weight: bold;
	text-align: right;
	color: Colour_fancy;
	}

.doc_bib_body {margin-left: Hmargin_ghost_text;}

.doc_bib_author {margin-right: Hmargin_inline_large;}

.doc_bib_author:after {content: ':';}

.doc_bib_title {font-style: italic;} 

.doc_bib_resource
	{
	display: block;
	margin-top: 0.25em;
	}


/********************************************************************************/
/* CSS for story notes.			 					*/
/********************************************************************************/

.doc_notes
	{
	margin-top: Vmargin_textual;
	padding: 0;
	list-style-type: none;
	}

.doc_note {margin-top: Vmargin_ghost_entry;}

.doc_note_head
	{
	width: Width_ghost_num;
	float: left;
	font-weight: bold;
	text-align: right;
	color: Colour_fancy;
	}

.doc_note_body {margin-left: Hmargin_ghost_text;}

