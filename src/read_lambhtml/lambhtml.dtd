<!-- DTD for the Lambhtml language. -->

<!-- Entities -->

<!ENTITY % Block
	"p | itemize | ul | enumerate | ol | description | dl
	| quote | callout 
	| code | tabular | verbatim | bitmap | subpage
	| equation | printout | table | figure
	| part | appendix | section
	| bibliography | notes | toc
	| title | abstract | rule
	| bib | note">

<!ENTITY % Node
	"tex | math
	| bold | strong | b | emph | em | i | mono | caps | thru
	| sup | sub | mbox | link | a
	| see | cite | ref | sref | mref">

<!ENTITY % Frag "(%Block;)+">

<!ENTITY % Inline "(#PCDATA | %Node;)*">

<!ENTITY % Flow "(#PCDATA | %Node; | %Block;)*">

<!ENTITY % Atts "label ID #IMPLIED
		order CDATA #IMPLIED
		extra CDATA #IMPLIED">

<!-- Top-level element -->

<!ELEMENT document (%Frag;)>

<!-- Block elements -->

<!ELEMENT p %Inline;>
<!ATTLIST p %Atts;>

<!ELEMENT itemize (li)+>
<!ATTLIST itemize %Atts;>

<!ELEMENT ul (li)+>
<!ATTLIST ul %Atts;>

<!ELEMENT enumerate (li)+>
<!ATTLIST enumerate %Atts;>

<!ELEMENT ol (li)+>
<!ATTLIST ol %Atts;>

<!ELEMENT description (dt | dd)+>
<!ATTLIST description %Atts;>

<!ELEMENT dl (dt | dd)+>
<!ATTLIST dl %Atts;>

<!ELEMENT quote %Frag;>
<!ATTLIST quote %Atts;>

<!ELEMENT callout (message?, %Frag;)>
<!ATTLIST callout %Atts;>

<!ELEMENT code (#PCDATA)>
<!ATTLIST code %Atts;>

<!ELEMENT tabular EMPTY>
<!ATTLIST tabular %Atts;>

<!ELEMENT verbatim (#PCDATA)>
<!ATTLIST verbatim %Atts;>

<!ELEMENT bitmap EMPTY>
<!ATTLIST bitmap %Atts; file CDATA #REQUIRED>

<!ELEMENT subpage %Frag;>
<!ATTLIST subpage %Atts;>

<!ELEMENT equation ((%Block;), caption)>
<!ATTLIST equation %Atts;>

<!ELEMENT printout ((%Block;), caption)>
<!ATTLIST printout %Atts;>

<!ELEMENT table ((%Block;), caption)>
<!ATTLIST table %Atts;>

<!ELEMENT figure ((%Block;), caption)>
<!ATTLIST figure %Atts;>

<!ELEMENT part %Inline;>
<!ATTLIST part %Atts;>

<!ELEMENT appendix EMPTY>
<!ATTLIST appendix %Atts;>

<!ELEMENT section %Inline;>
<!ATTLIST section %Atts;>

<!ELEMENT subsection %Inline;>
<!ATTLIST subsection %Atts;>

<!ELEMENT subsubsection %Inline;>
<!ATTLIST subsubsection %Atts;>

<!ELEMENT bibliography EMPTY>
<!ATTLIST bibliography %Atts;>

<!ELEMENT notes EMPTY>
<!ATTLIST notes %Atts;>

<!ELEMENT toc EMPTY>
<!ATTLIST toc %Atts;>

<!ELEMENT title %Inline;>
<!ATTLIST title %Atts;>

<!ELEMENT subtitle %Inline;>
<!ATTLIST subtitle %Atts;>

<!ELEMENT abstract %Frag;>
<!ATTLIST abstract %Atts;>

<!ELEMENT rule EMPTY>
<!ATTLIST rule %Atts;>

<!ELEMENT bib (who, what, where)>
<!ATTLIST bib %Atts;>

<!ELEMENT note %Frag;>
<!ATTLIST note %Atts;>

<!ELEMENT li %Flow;>
<!ATTLIST li %Atts;>

<!ELEMENT dt %Inline;>
<!ATTLIST dt %Atts;>

<!ELEMENT dd %Flow;>
<!ATTLIST dd %Atts;>

<!ELEMENT message %Inline;>
<!ATTLIST message %Atts;>

<!ELEMENT caption %Inline;>
<!ATTLIST caption %Atts;>

<!ELEMENT who %Inline;>
<!ATTLIST who %Atts;>

<!ELEMENT what %Inline;>
<!ATTLIST what %Atts;>

<!ELEMENT where %Inline;>
<!ATTLIST where %Atts;>

<!-- Inline elements -->

<!ELEMENT bold %Inline;>
<!ATTLIST bold %Atts;>

<!ELEMENT strong %Inline;>
<!ATTLIST strong %Atts;>

<!ELEMENT b %Inline;>
<!ATTLIST b %Atts;>

<!ELEMENT emph %Inline;>
<!ATTLIST emph %Atts;>

<!ELEMENT em %Inline;>
<!ATTLIST em %Atts;>

<!ELEMENT i %Inline;>
<!ATTLIST i %Atts;>

<!ELEMENT mono %Inline;>
<!ATTLIST mono %Atts;>

<!ELEMENT caps %Inline;>
<!ATTLIST caps %Atts;>

<!ELEMENT thru %Inline;>
<!ATTLIST thru %Atts;>

<!ELEMENT sup %Inline;>
<!ATTLIST sup %Atts;>

<!ELEMENT sub %Inline;>
<!ATTLIST sub %Atts;>

<!ELEMENT mbox %Inline;>
<!ATTLIST mbox %Atts;>

<!ELEMENT link %Inline;>
<!ATTLIST link %Atts; href CDATA #REQUIRED>

<!ELEMENT a %Inline;>
<!ATTLIST a %Atts; href CDATA #REQUIRED>

<!ELEMENT see EMPTY>
<!ATTLIST see %Atts; href IDREF #REQUIRED>

<!ELEMENT cite EMPTY>
<!ATTLIST cite %Atts; href IDREF #REQUIRED>

<!ELEMENT ref EMPTY>
<!ATTLIST ref %Atts; href IDREF #REQUIRED>

<!ELEMENT sref EMPTY>
<!ATTLIST sref %Atts; href IDREF #REQUIRED>

<!ELEMENT mref %Inline;>
<!ATTLIST mref %Atts; href IDREF #REQUIRED>

